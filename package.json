{
	"name": "dams-sync",
	"version": "1.0.0",
	"description": "A sync process to copy archival information from TMS to an intermediate database that is then pulled from by the DAMS",
	"main": "dist/app.js",
	"bin": "bin.js",
	"scripts": {
		"test": "jest src/test",
		"compile": "tsc -p ./",
		"watch": "tsc -w",
		"start": "node dist/app.js",
		"build": "npm run compile && pkg . --target node12-win",
		"postbuild": "zip dams-sync.zip .env dams-sync-win.exe",
		"lint": "eslint --config .eslintrc.js src --ext .ts --fix"
	},
	"author": "Christopher D Jativa",
	"license": "ISC",
	"devDependencies": {
		"@types/dotenv": "^8.2.0",
		"@types/jest": "^26.0.23",
		"@types/json-diff": "^1.0.0",
		"@types/mysql": "^2.15.11",
		"@types/node": "^14.0.1",
		"@types/pg": "^7.14.3",
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.51.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "^27.0.3",
		"prettier": "^2.8.4",
		"ts-jest": "^27.0.2",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"json-diff": "^1.0.6",
		"mssql": "^6.2.0",
		"pg": "^8.2.1",
		"pkg": "^4.4.9",
		"utf8": "^3.0.0",
		"winston": "^3.10.0"
	}
}
